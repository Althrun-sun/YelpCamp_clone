<% layout('layouts/boilerplate') %> 
<h1>All Campgrounds</h1>
<div>
    <a href="/campgrounds/new">Add new campground</a>
</div>

<% for(let campsite of campgrounds) {%>
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <img src="<%=campsite.images[0].url %>" alt="" class="img-fluid">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= campsite.title %></h5>
                    <p class="card-text"><%= campsite.description %> </p>
                    <p class="card-text">
                        <small class="text-muted"><%= campsite.location %> </small>
                    </p>
                    <a href="/campgrounds/<%=campsite._id%>" class="btn btn-primary">View <%= campsite.title %> </a>

                </div>
            </div>
        </div>
    </div>
      
<% } %>
